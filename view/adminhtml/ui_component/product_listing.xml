<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="sync_to_cpos">
                <settings>
                    <confirm>
                        <message translate="true">Sync selected items to ConnectPOS?</message>
                        <title translate="true">Sync items</title>
                    </confirm>
                    <url path="performance/index/masssync"/>
                    <type>sync_to_cpos</type>
                    <label translate="true">Sync to ConnectPOS</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>
